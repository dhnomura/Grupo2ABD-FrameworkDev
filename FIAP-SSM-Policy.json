{
    "Version":"2012-10-17",
    "Statement":[
       {
          "Effect":"Allow",
          "Action":[
             "ssm:SendCommand"
          ],
          "Resource":[
             "arn:aws:ssm:*:*:document/*"
          ]
       },
       {
          "Effect":"Allow",
          "Action":[
             "ssm:SendCommand"
          ],
          "Resource":[
             "arn:aws:ec2:*:*:instance/*"
          ],
          "Condition":{
             "StringLike":{
                "ssm:resourceTag/Faculdade":[
                   "FIAP"
                ]
             }
          }
       }
    ]
 }